<Window x:Class="RasterizationApp.ThicknessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RasterizationApp"
        mc:Ignorable="d"
        Title="Thickness" Height="150" Width="200">
    <Grid>
        <Label>Enter Thickness Value</Label>
        <TextBox x:Name="ThicknessTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100"/>
        <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="OKButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Click="CancelButton_Click"/>
    </Grid>
</Window>
